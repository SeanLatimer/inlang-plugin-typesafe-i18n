{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "target": "ES2020",
    "strict": true,
    "importsNotUsedAsValues": "error",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "outDir": "dist",
  },
  "include": [
    "src/**/*"
  ],
}